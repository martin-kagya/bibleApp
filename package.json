{
  "name": "bible-presentation-app",
  "version": "2.0.8",
  "description": "Comprehensive AI-powered presentation software for preachers with real-time speech recognition and semantic scripture suggestions",
  "main": "electron.js",
  "build": {
    "appId": "com.pneumavoice.bibleapp",
    "productName": "PneumaVoice",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "electron-preload.js",
      "server.js",
      "services/**/*",
      "routes/**/*",
      "config/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "PneumaVoice"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "asar": true,
    "asarUnpack": [
      "services/faster_whisper_server.py",
      "node_modules/better-sqlite3/**/*",
      "node_modules/faiss-node/**/*"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "server": "nodemon server.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "start:dev": "concurrently -n \"VITE,ELECTRON\" -c \"blue,yellow\" \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "embeddings:generate": "node scripts/generateEmbeddings.js",
    "test": "node tests/run-all-tests.js",
    "test:paraphrase": "node tests/paraphrase-detection.test.js",
    "test:parsing": "node tests/reference-parsing.test.js",
    "test:sermon": "node test-preacher-sermon.js",
    "electron": "electron .",
    "electron:build": "electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "rebuild:all": "electron-rebuild -f -w better-sqlite3,faiss-node,sqlite3",
    "build:all": "npm run build && npm run electron:build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "faiss-node": "^0.5.1",
    "fs-extra": "^11.3.2",
    "ioredis": "^5.9.2",
    "openai": "^4.28.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "better-sqlite3": "^12.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "lucide-react": "^0.294.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "wait-on": "^9.0.3"
  },
  "keywords": [
    "bible",
    "presentation",
    "ai",
    "speech-recognition",
    "scripture-detection",
    "preaching",
    "semantic-search",
    "vector-database",
    "embeddings"
  ],
  "author": "Your Name",
  "license": "MIT",
  "electron": {
    "main": "electron.js"
  }
}